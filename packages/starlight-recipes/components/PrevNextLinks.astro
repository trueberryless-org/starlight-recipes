---
import { LinkCard, CardGrid } from "@astrojs/starlight/components";
import config from "virtual:starlight-recipes-config";

import type { StarlightRecipeLink } from "../libs/content";

interface Props {
  next: StarlightRecipeLink | undefined;
  prev: StarlightRecipeLink | undefined;
}

const { next, prev } = Astro.props;
---

{
  prev || next ? (
    <div class="pagination" data-pagefind-ignore>
      <CardGrid>
        {prev && (
          <LinkCard
            href={prev.href}
            rel="prev"
            title={
              prev.label ??
              (config.prevNextLinksOrder === "reverse-chronological"
                ? Astro.locals.t("starlightRecipes.pagination.prev")
                : Astro.locals.t("starlightRecipes.pagination.next"))
            }
          />
        )}
        {next && (
          <LinkCard
            href={next.href}
            rel="next"
            title={
              next.label ??
              (config.prevNextLinksOrder === "reverse-chronological"
                ? Astro.locals.t("starlightRecipes.pagination.next")
                : Astro.locals.t("starlightRecipes.pagination.prev"))
            }
          />
        )}
      </CardGrid>
    </div>
  ) : null
}

<style>
  .pagination {
    container-type: inline-size;
  }

  .pagination :global(.card-grid) {
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
  }

  .pagination :global(.sl-link-card:has([rel="prev"])) {
    grid-template-columns: auto 1fr;
  }

  .pagination :global(.sl-link-card:has([rel="prev"]) span) {
    order: 2;
  }

  .pagination :global(.sl-link-card:has([rel="prev"]) svg) {
    transform: matrix(-1, 0, 0, 1, 0, 0);
  }

  .pagination :global(.sl-link-card:has([rel="next"]) span) {
    text-align: end;
  }

  @container (min-width: 30rem) {
    .pagination :global(.card-grid) {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
    }

    .pagination :global(.sl-link-card:has([rel="next"])) {
      grid-column: 2;
    }
  }
</style>
