---
import type { InferGetStaticPropsType } from "astro";

import Page from "../components/Page.astro";
import RecipesGrid from "../components/RecipesGrid.astro";
import PrevNextLinks from "../components/PrevNextLinks.astro";
import { getRecipesStaticPaths } from "../libs/content";
import { getPageProps } from "../libs/page";
import { getSiteTitle } from "../libs/title";

export const prerender = true;

export function getStaticPaths() {
  return getRecipesStaticPaths();
}

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { entries, locale, nextLink, prevLink } = Astro.props;

const pageProps = getPageProps(getSiteTitle(locale));
---

<Page {...pageProps}>
  <RecipesGrid {entries} {locale} />
  <footer class="not-content">
    <PrevNextLinks next={nextLink} prev={prevLink} />
  </footer>
</Page>

<style>
  :global(.content-panel:first-of-type) {
    display: none;
  }

  :global(.content-panel:nth-of-type(2)) {
    border-top: none;
  }
</style>
